<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="550.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ec.espol.edu.sqldbcontrol.InventarioController">
   <children>
      <Text fx:id="volver" fill="#2d08ff" layoutX="23.0" layoutY="458.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Volver" underline="true" />
      <TableView fx:id="materiaPrimaTable" layoutX="23.0" layoutY="86.0" prefHeight="316.0" prefWidth="473.0">
        <columns>
          <TableColumn fx:id="codigoColumn" prefWidth="75.0" text="Codigo" />
          <TableColumn fx:id="nombreMateriaColumn" prefWidth="75.0" text="Nombre" />
          <TableColumn fx:id="cantidadColumn" prefWidth="135.0" text="Cantidad" />
            <TableColumn fx:id="fechaElaboracionColumn" prefWidth="131.0" text="Fecha de Elaboracion" />
            <TableColumn fx:id="fechaCaducidadColumn" prefWidth="131.0" text="Fecha de Caducidad" />
            <TableColumn fx:id="proveedorColumn" prefWidth="131.0" text="Proveedor" />
        </columns>
      </TableView>
      <Label layoutX="23.0" layoutY="31.0" text="INVENTARIO">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      
      <Button fx:id="agregarMateria" layoutX="544.0" layoutY="122.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="166.0" text="Agregar Materia Prima" />
      <Button fx:id="eliminarMateria" layoutX="544.0" layoutY="191.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="166.0" text="Eliminar Materia Prima" />
      <Button fx:id="modificarMateria" layoutX="544.0" layoutY="256.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="166.0" text="Modificar Materia Prima" />

      <!-- Formulario para agregar cliente -->
      <VBox fx:id="formMateria" layoutX="529.0" layoutY="66.0" prefHeight="335.0" prefWidth="166.0" spacing="10" visible="false">
          <Label text="Nombre:" />
          <TextField fx:id="nombreField" />
          <Label text="Fecha elaboracion (yyyy-MM-dd): " />
          <TextField fx:id="fechaEField" />
          <Label text="Fecha Caducidad (yyyy-MM-dd): " />
          <TextField fx:id="fechaCField" />
          <Label text="Cantidad: " />
          <TextField fx:id="cantidadField" />
          <Label text="IDProveedor " />
          <TextField fx:id="proveedorField" />
          <Button onAction="#handleAddMateria" text="OK" />
      </VBox>
      
      <VBox fx:id="modificar" layoutX="529.0" layoutY="66.0" prefHeight="335.0" prefWidth="166.0" spacing="10" visible="false">
          <Label text="Id:" />
          <TextField fx:id="idFieldM" editable="false" style="-fx-background-color: lightgray; -fx-text-fill: blue;" />
          <Label text="Nombre:" />
          <TextField fx:id="nombreFieldM" />
          <Label text="Fecha elaboracion (yyyy-MM-dd):" />
          <TextField fx:id="fechaEFieldM" />
          <Label text="Fecha caducidad (yyyy-MM-dd):" />
          <TextField fx:id="fechaCFieldM" />
          <Label text="Cantidad" />
          <TextField fx:id="cantidadFieldM" />
          <Label text="IDProveedor" />
          <TextField fx:id="idProveedoroFieldM" />
          <Button onAction="#modificarMateria" text="OK" />
      </VBox>
      
   </children>
</AnchorPane>
